<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^([^\.]+)$ $1.php [NC,L]

    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php?url=/$1 [QSA,L]

    RewriteCond %{REQUEST_FILENAME} !f
    RewriteCond %{REQUEST_FILENAME} \.php$
    RewriteRule ^(.*)$ index.php?url=/$1 [QSA,L]
</IfModule>

